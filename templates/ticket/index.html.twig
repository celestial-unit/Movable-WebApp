{% extends 'base1.html.twig' %}
{% block javascripts %}
    {{ parent() }}
    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
{% block title %}Ticket Management{% endblock %}
{% block sidebar %}
    <div class="app-brand demo">
        <a href="index.html" class="app-brand-link">
            <span class="app-brand-logo demo">
                <!-- Your logo SVG here -->
            </span>
            <span class="app-brand-text demo menu-text fw-bolder ms-2">Dashboard</span>
        </a>
    </div>

    <div class="menu-inner-shadow"></div>

    <ul class="menu-inner py-1">
        <li class="menu-item">
            <a href="{{ path('home') }}" class="menu-link">
                <i class="menu-icon tf-icons bx bx-home-circle"></i>
                <div>Dashboard</div>
            </a>
        </li>

       

        <li class="menu-item">
            <a href="{{ path('app_ticket_index') }}" class="menu-link">
                <i class="menu-icon tf-icons bx bx-id-card"></i>
                <div>Ticket</div>
            </a>
        </li>
{% endblock %}
{% block body %}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Ticket /</span> Management System
    </h4>

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Ticket List</h5>
          
        </div>
        <div class="card-body">
            <div class="table-responsive text-nowrap">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Payment Mode</th>
                            <th>Transport</th>
                            <th>Price</th>
                            <th>Destination</th>
                            <th>Booking Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for ticket in tickets %}
                        <tr>
                            <td>{{ ticket.id }}</td>
                            <td>{{ ticket.paymentMode }}</td>
                            <td>{{ ticket.transport }}</td>
                            <td>{{ ticket.price }}</td>
                            <td>{{ ticket.destination }}</td>
                            <td>{{ ticket.bookingDate ? ticket.bookingDate|date('Y-m-d H:i') : '' }}</td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="{{ path('app_ticket_show', {'id': ticket.id}) }}">
                                            <i class="bx bx-show me-1"></i> Show
                                        </a>
                                        <a class="dropdown-item" href="{{ path('app_ticket_edit', {'id': ticket.id}) }}">
                                            <i class="bx bx-edit-alt me-1"></i> Edit
                                        </a>
                                        <form method="post" action="{{ path('app_ticket_delete', {'id': ticket.id}) }}" class="dropdown-item p-0">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ticket.id) }}">
                                            <button class="btn btn-link p-0 text-danger" onclick="return confirm('Are you sure you want to delete this ticket?')">
                                                <i class="bx bx-trash me-1"></i> Delete
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7" class="text-center">No tickets found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
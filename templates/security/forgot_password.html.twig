{% extends "layouts/auth.html.twig" %}

{% block title %}Forgot Password - Movable{% endblock %}

{% block body %}
<div class="card">
    <div class="card-body">
        <!-- Logo -->
        <div class="app-brand justify-content-center mb-4">
            <a href="{{ path("app_front_home") }}" class="app-brand-link">
                <span class="app-brand-logo">
                    <i class="bx bx-car text-primary fs-2"></i>
                </span>
                <span class="app-brand-text fw-bold ms-2">Movable</span>
            </a>
        </div>
        border-radius: 0.5rem;
    }
    
    .form-label {
        margin-bottom: 0.5rem;
        font-size: 0.875rem;
        font-weight: 500;
        color: #566a7f;
    }
    
    .btn-primary {
        background-color: #696cff;
        color: #fff;
        border-color: #696cff;
    }
    
    .btn-primary:hover {
        background-color: #5f65f1;
        border-color: #5f65f1;
    }
    
    .app-brand {
        margin-bottom: 1.5rem;
    }
    
    .app-brand-logo {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 32px;
        height: 32px;
        border-radius: 8px;
        background-color: #696cff;
        color: #fff;
        font-size: 18px;
        font-weight: 700;
    }
    
    .forgot-heading {
        margin-bottom: 0.5rem;
    }
    
    .forgot-subheading {
        color: #697a8d;
        margin-bottom: 1.5rem;
    }
    
    .text-primary {
        color: #696cff !important;
    }
    
    .btn-back {
        display: inline-flex;
        align-items: center;
        font-size: 0.875rem;
        font-weight: 500;
        color: #566a7f;
        transition: all 0.2s ease-in-out;
    }
    
    .btn-back:hover {
        color: #696cff;
        text-decoration: none;
    }
    
    .btn-back i {
        margin-right: 0.25rem;
        font-size: 1rem;
    }
</style>
{% endblock %}

{% block body %}
<div class="card">
    <div class="card-body">
        <!-- Back button -->
        <a href="{{ path('app_login') }}" class="btn-back mb-4">
            <i class="bx bx-arrow-back"></i> Back to login
        </a>
        
        <!-- Logo -->
        <div class="app-brand justify-content-center mb-4">
            <a href="{{ path('app_front_home') }}" class="app-brand-link">
                <span class="app-brand-logo me-1">
                    <i class="bx bx-car"></i>
                </span>
                <span class="app-brand-text fw-bold">Movable</span>
            </a>
        </div>
        
        <h4 class="forgot-heading text-center">Forgot Password? ðŸ”’</h4>
        <p class="forgot-subheading text-center">Enter your email and we'll send you instructions to reset your password</p>
        
        <!-- Flash messages -->
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}
        
        <!-- Forgot Password Form -->
        <form method="post" class="mb-3">
            <!-- Email field -->
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" name="email" id="email" 
                       class="form-control form-control-lg" 
                       placeholder="Enter your email" 
                       autofocus required>
                <div class="form-text mt-2">
                    A password reset link will be sent to this email address.
                </div>
            </div>
            
            <!-- Submit button -->
            <div class="mb-3">
                <button class="btn btn-primary d-grid w-100" type="submit">
                    Send Reset Link
                </button>
            </div>
        </form>
        
        <!-- Login link -->
        <div class="text-center">
            <span>Remember your password?</span>
            <a href="{{ path('app_login') }}" class="text-decoration-none">
                <span>Back to login</span>
            </a>
        </div>
    </div>
</div>
{% endblock %}


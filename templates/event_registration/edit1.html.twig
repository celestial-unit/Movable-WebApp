{% extends 'base1.html.twig' %}

{% block title %}Edit EventRegistration{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Custom enhancements for Sneat theme */
        .edit-container {
            background: #fff;
            border-radius: 0.375rem;
            box-shadow: 0 0.125rem 0.25rem rgba(161, 172, 184, 0.12);
            padding: 2rem;
        }

        .edit-header {
            padding-bottom: 1.5rem;
            margin-bottom: 2rem;
            border-bottom: 1px solid #d9dee3;
        }

        .form-section {
            margin-bottom: 2.5rem;
        }

        .delete-section {
            border-top: 1px solid #d9dee3;
            padding-top: 2rem;
            margin-top: 3rem;
        }

        /* Enhanced form controls to match Sneat theme */
        .form-control:focus {
            border-color: #696cff;
            box-shadow: 0 0 0 0.2rem rgba(105, 108, 255, 0.2);
        }

        /* Button adjustments */
        .btn-update {
            background-color: #696cff;
            color: #fff;
            padding: 0.786rem 1.5rem;
        }

        .btn-update:hover {
            background-color: #5b5dcc;
            color: #fff;
        }

        /* Back link styling */
        .back-link {
            color: #6f6b7d;
            transition: color 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .back-link:hover {
            color: #696cff;
            text-decoration: none;
        }

        /* Delete button alignment */
        .delete-form .btn {
            width: auto;
            margin-top: 1rem;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="edit-container">
            <div class="edit-header">
                <h4 class="mb-0">Edit Event Registration</h4>
                <p class="text-muted mt-2">Update registration details below</p>
            </div>

            <div class="form-section">
                {{ include('event_registration/_form.html.twig', {
                    'button_label': 'Update',
                    'button_class': 'btn-update'
                }) }}
            </div>

            <div class="d-flex justify-content-between align-items-center mt-4">
                <a href="{{ path('app_eventback_registration_index') }}" class="back-link">
                    <i class="bx bx-chevron-left scaleX-n1-rtl"></i>
                    <span>Back to list</span>
                </a>
            </div>

            <div class="delete-section">
                <h6 class="text-danger mb-3">Danger Zone</h6>
                {{ include('event_registration/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
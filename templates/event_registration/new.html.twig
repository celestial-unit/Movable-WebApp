{% extends 'base.html.twig' %}

{% block title %}New Event Registration{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Create New Registration</h1>
    
    <div class="card shadow">
        <div class="card-body">
            <div class="alert alert-info mb-4">
                Registering for event: <strong>{{ event.title }}</strong>
                <br>Event Date: {{ event.getFormattedDate() }}
            </div>

            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                <div class="mb-3">
                    {{ form_label(form.registrationDate) }}
                    {{ form_widget(form.registrationDate, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.registrationDate) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.status) }}
                    {{ form_widget(form.status, {'attr': {'class': 'form-select'}}) }}
                    {{ form_errors(form.status) }}
                </div>

                <button type="submit" class="btn btn-primary">Save</button>
            {{ form_end(form) }}
        </div>
    </div>

    <div class="mt-3">
        <a href="{{ path('app_event_registration_index') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}Favorite index{% endblock %}

{% block body %}
    <h1>Favorite index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id_favorite</th>
                <th>Id_user</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for favorite in favorites %}
            <tr>
                <td>{{ favorite.idFavorite }}</td>
                <td>{{ favorite.idUser }}</td>
                <td>
                    <a href="{{ path('app_favorite_show', {'id_favorite': favorite.id_favorite}) }}">show</a>
                    <a href="{{ path('app_favorite_edit', {'id_favorite': favorite.id_favorite}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_favorite_new') }}">Create new</a>
{% endblock %}

<div class="content-card">
    {{ form_start(form, {'action': path('app_reservation_new')}) }}
        <div class="row g-3">
            <div class="col-md-6">
                {{ form_row(form.firstName, {
                    'attr': {'class': 'form-control', 'placeholder': 'Enter first name'}
                }) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.lastName, {
                    'attr': {'class': 'form-control', 'placeholder': 'Enter last name'}
                }) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.age, {
                    'attr': {'class': 'form-control', 'placeholder': 'Enter age'}
                }) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.email, {
                    'attr': {'class': 'form-control', 'placeholder': 'Enter email'}
                }) }}
            </div>
            <div class="form-group">
    <label for="date">Date:</label>
    <input type="date" class="form-control" id="date" name="date" required>
</div>
            <div class="col-md-6">
                {{ form_row(form.location, {
                    'attr': {'class': 'form-control', 'placeholder': 'Enter location'}
                }) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.seats, {
                    'attr': {'class': 'form-control', 'placeholder': 'Enter number of seats'}
                }) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.agentType, {
                    'attr': {'class': 'form-select'},
                    'placeholder': 'Select agent type'
                }) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.paymentMode, {
                    'attr': {'class': 'form-select'},
                    'placeholder': 'Select payment mode'
                }) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.transport, {
                    'attr': {'class': 'form-select'},
                    'placeholder': 'Select transport'
                }) }}
            </div>
        </div>
        
        <div class="d-flex justify-content-end mt-4">
            <button type="submit" class="btn-action me-2" style="background-color: #2ecc71;">
                {{ button_label|default('Save Reservation') }}
            </button>
            {% if form.vars.value.id %}
                <a href="{{ path('app_reservation_delete', {'id': form.vars.value.id}) }}" 
                   class="btn-action" style="background-color: #e74c3c;"
                   onclick="return confirm('Are you sure you want to delete this reservation?')">
                    Delete Reservation
                </a>
            {% endif %}
        </div>
    {{ form_end(form) }}
</div>
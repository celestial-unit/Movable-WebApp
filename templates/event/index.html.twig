{% extends 'base.html.twig' %}

{% block title %}Events List{% endblock %}

{% block body %}
<div>
    <h1>Events Management</h1>

    <div>
        <a href="{{ path('app_event_new') }}">Create New Event</a>
    </div>

    <div>
        <h4>Current Events</h4>
        
        <div>
            <table>
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Duration</th>
                        <th>Type</th>
                        <th>Status</th>
                        <th>Date</th>
                        <th>Start Time</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for event in events %}
                    <tr>
                        <td>{{ event.id }}</td>
                        <td>{{ event.title }}</td>
                        <td>{{ event.description|slice(0, 30) }}...</td>
                        <td>{{ event.duration }} mins</td>
                        <td>{{ event.type }}</td>
                        <td>{{ event.status }}</td>
                        <td>{{ event.getFormattedDate() }}</td>
                        <td>{{ event.getFormattedTime() }}</td>
                        <td>
                            <a href="{{ path('app_event_registration_new', {'eventId': event.id}) }}">Register</a> |
                            <a href="{{ path('app_event_edit', {'id': event.id}) }}">Edit</a>
                            <form action="{{ path('app_event_delete', {'id': event.id}) }}" method="post" style="display:inline;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
                                <button type="submit" onclick="return confirm('Are you sure you want to delete this event?');">Delete</button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="9">No events found. Start by creating a new event!</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}

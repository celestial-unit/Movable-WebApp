{% extends 'base1.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    <h1>Event</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ event.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ event.description }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ event.duration }}</td>
            </tr>
            <tr>
                <th>PRICE</th>
                <td>{{ event.type }}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{{ event.status }}</td>
            </tr>
            <tr>
                <th>Dateevent</th>
                <td>{{ event.dateevent }}</td>
            </tr>
            <tr>
                <th>StartEvent</th>
                <td>{{ event.startEvent }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_eventback_index') }}">back to list</a>

    <a href="{{ path('app_eventback_edit', {'id': event.id}) }}">edit</a>

    {{ include('event/_delete_form.html.twig') }}
{% endblock %}

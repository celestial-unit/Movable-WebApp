<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<StackPane fx:id="rootPane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.UserSignUpController" stylesheets="@styles/app.css">

    <!-- Background Image with a semi-transparent overlay -->
    <StackPane>
        <ImageView fx:id="backgroundImage" fitHeight="1080" fitWidth="1920" preserveRatio="false">
            <image>
                <Image url="@Home.jpg" />
            </image>
        </ImageView>
        <Pane styleClass="overlay" style="-fx-background-color: rgba(0, 0, 0, 0.7); -fx-view-order: 1;" />
    </StackPane>

    <!-- Main Container: HBox for Split View -->
    <HBox alignment="CENTER">
        
        <!-- Left Half: Information Panel -->
        <VBox alignment="CENTER" spacing="20" styleClass="left-panel" HBox.hgrow="ALWAYS" style="-fx-padding: 50 20 50 50; -fx-alignment: center-left;">
            <!-- Logo -->
            <ImageView fitHeight="80" fitWidth="150" preserveRatio="true">
                <image>
                    <Image url="@movable.png" />
                </image>
                <VBox.margin>
                    <Insets bottom="20" />
                </VBox.margin>
            </ImageView>
            <Label styleClass="title" style="-fx-font-size: 42px; -fx-font-weight: bold; -fx-text-fill: white;" text="Join Movable" />
            <Label styleClass="subtitle" style="-fx-font-size: 16px; -fx-text-fill: white; -fx-opacity: 0.9;" text="Create an account to start your journey with us" wrapText="true" />
            
            <VBox spacing="15" style="-fx-padding: 30 0 0 0;">
                <Label styleClass="feature-item" style="-fx-font-size: 14px; -fx-text-fill: white; -fx-opacity: 0.8;" text="✓ Access to all Movable features" />
                <Label styleClass="feature-item" style="-fx-font-size: 14px; -fx-text-fill: white; -fx-opacity: 0.8;" text="✓ Personalized user experience" />
                <Label styleClass="feature-item" style="-fx-font-size: 14px; -fx-text-fill: white; -fx-opacity: 0.8;" text="✓ Optional facial recognition login" />
            </VBox>
        </VBox>
        
        <!-- Right Half: Signup Form -->
        <VBox alignment="CENTER" styleClass="login-container card" spacing="15" style="-fx-margin: 50; -fx-max-width: 450px; -fx-min-width: 350px; -fx-background-color: rgba(255, 255, 255, 0.98); -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.8), 15, 0, 0, 0); -fx-border-radius: 8; -fx-background-radius: 8; -fx-view-order: -1;">
            <padding>
                <Insets top="30" right="40" bottom="30" left="40" />
            </padding>
            
            <Label styleClass="login-title" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #1a73e8;" text="Create Account" />
            <Label styleClass="login-subtitle" style="-fx-font-size: 14px; -fx-text-fill: #5f6368;" text="Please fill in your information" />
            
            <!-- Error Message Label -->
            <Label fx:id="errorLabel" styleClass="error-message" style="-fx-font-size: 14px; -fx-text-fill: #d32f2f; -fx-padding: 5 0;" text="Error message will appear here" visible="false" />
            
            <!-- Full Name Field -->
            <VBox styleClass="form-container" spacing="5">
                <Label styleClass="form-label" style="-fx-font-weight: bold; -fx-text-fill: #3c4043;" text="Full Name" />
                <TextField fx:id="fullNameTf" promptText="Enter your full name" styleClass="form-field" style="-fx-background-color: #f1f3f4; -fx-border-color: #dadce0; -fx-border-radius: 4; -fx-background-radius: 4; -fx-padding: 10 15;" />
            </VBox>
            
            <!-- Email Field -->
            <VBox styleClass="form-container" spacing="5">
                <Label styleClass="form-label" style="-fx-font-weight: bold; -fx-text-fill: #3c4043;" text="Email" />
                <TextField fx:id="emailTf" promptText="Enter your email" styleClass="form-field" style="-fx-background-color: #f1f3f4; -fx-border-color: #dadce0; -fx-border-radius: 4; -fx-background-radius: 4; -fx-padding: 10 15;" />
            </VBox>
            
            <!-- Password Field -->
            <VBox styleClass="form-container" spacing="5">
                <Label styleClass="form-label" style="-fx-font-weight: bold; -fx-text-fill: #3c4043;" text="Password" />
                <PasswordField fx:id="passwordTf" promptText="Create a password" styleClass="form-field" style="-fx-background-color: #f1f3f4; -fx-border-color: #dadce0; -fx-border-radius: 4; -fx-background-radius: 4; -fx-padding: 10 15;" />
            </VBox>
            
            <!-- Confirm Password Field -->
            <VBox styleClass="form-container" spacing="5">
                <Label styleClass="form-label" style="-fx-font-weight: bold; -fx-text-fill: #3c4043;" text="Confirm Password" />
                <PasswordField fx:id="confirmPasswordTf" promptText="Confirm your password" styleClass="form-field" style="-fx-background-color: #f1f3f4; -fx-border-color: #dadce0; -fx-border-radius: 4; -fx-background-radius: 4; -fx-padding: 10 15;" />
            </VBox>
            
            <!-- User Role Selection -->
            <VBox styleClass="form-container" spacing="5">
                <Label styleClass="form-label" style="-fx-font-weight: bold; -fx-text-fill: #3c4043;" text="Select Role" />
                <ComboBox fx:id="roleCb" promptText="Select your role" styleClass="form-combo-box" maxWidth="Infinity" style="-fx-background-color: #f1f3f4; -fx-border-color: #dadce0; -fx-border-radius: 4; -fx-background-radius: 4; -fx-padding: 10 15;" />
            </VBox>
            
            <!-- Create Account Button -->
            <Button fx:id="createAccountBtn" onAction="#saveUser" styleClass="button-accent" text="Create Account" maxWidth="Infinity" style="-fx-background-color: #ff5722; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12 15; -fx-background-radius: 4; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 0);"
                   onMouseEntered="#handleButtonHover" onMouseExited="#handleButtonExit">
                <VBox.margin>
                    <Insets top="10" />
                </VBox.margin>
            </Button>
            
            <!-- Facial Recognition Option -->
            <HBox alignment="CENTER" spacing="10" style="-fx-padding: 5 0;">
                <Label text="Add facial recognition: " styleClass="text-small" style="-fx-text-fill: #5f6368;" />
                <CheckBox fx:id="enableFaceIdCb" selected="false" style="-fx-text-fill: #5f6368;" />
                <Button fx:id="captureBtn" onAction="#captureImage" styleClass="social-login-button" text="Capture Face" 
                       style="-fx-background-color: white; -fx-border-color: #dadce0; -fx-border-radius: 4; -fx-background-radius: 4; -fx-text-fill: #1a73e8; -fx-cursor: hand;" 
                       onMouseEntered="#handleButtonHover" onMouseExited="#handleButtonExit" />
            </HBox>
            
            <!-- Login Link -->
            <HBox alignment="CENTER" spacing="5" style="-fx-padding: 15 0 0 0;">
                <Label text="Already have an account?" styleClass="text-small" style="-fx-text-fill: #5f6368;" />
                <Label onMouseClicked="#switchToLoginPage" styleClass="button-text" text="Login" style="-fx-cursor: hand; -fx-text-fill: #1a73e8; -fx-font-weight: bold;" 
                       onMouseEntered="#handleLinkHover" onMouseExited="#handleLinkExit" />
            </HBox>
        </VBox>
        
        <!-- Add right margin -->
        <Pane minWidth="50" />
    </HBox>

</StackPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Label?>

<AnchorPane prefHeight="620.0" prefWidth="972.0" style="-fx-background-color: #E3F2FD;" stylesheets="@style1.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.OfficeController">
    <children>
        <!-- Sidebar Panel with Light Blue Background -->
        <AnchorPane layoutY="3.0" prefHeight="620" prefWidth="250" style="-fx-background-color: #BBDEFB; -fx-border-color: #90CAF9; -fx-border-width: 1; -fx-border-radius: 10; -fx-background-radius: 10;">
            <Label layoutX="10.0" layoutY="10.0" text="Office Management" style="-fx-font-size: 18px; -fx-text-fill: #FF9800; -fx-font-weight: bold;" />

            <!-- Input Fields on Sidebar -->
            <TextField fx:id="officeNameField" layoutX="10.0" layoutY="50.0" prefWidth="230.0" promptText="Office Name" style="-fx-background-radius: 5;" />
            <TextField fx:id="locationField" layoutX="10.0" layoutY="100.0" prefWidth="230.0" promptText="Location" style="-fx-background-radius: 5;" />
            <TextField fx:id="phoneField" layoutX="10.0" layoutY="150.0" prefWidth="230.0" promptText="Phone Number" style="-fx-background-radius: 5;" />
            <TextField fx:id="numAgentsField" layoutX="10.0" layoutY="200.0" prefWidth="230.0" promptText="Number of Agents" style="-fx-background-radius: 5;" />

            <!-- Action Buttons -->
            <Button fx:id="addButton" layoutX="20.0" layoutY="260.0" onAction="#addOffice" prefHeight="41.0" prefWidth="210.0" text="Add Office" style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-cursor: hand;" />
            <Button fx:id="updateButton" layoutX="20.0" layoutY="320.0" onAction="#updateOffice" text="Update Office" prefHeight="41.0" prefWidth="210.0" style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-cursor: hand;" />
            <Button fx:id="deleteButton" layoutX="20.0" layoutY="380.0" onAction="#deleteOffice" text="Delete Office" prefHeight="41.0" prefWidth="210.0" style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-cursor: hand;" />
        </AnchorPane>

        <!-- HBox for Offices -->
        <HBox fx:id="officesBox" layoutX="270.0" layoutY="20.0" prefHeight="350.0" prefWidth="680.0" spacing="20.0" style="-fx-background-color: #FFFFFF; -fx-border-color: #BBDEFB; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 10;" />

        <!-- Go to Agents Form Button -->
        <Button fx:id="goToAgentsForm" layoutX="720.0" layoutY="500.0" onAction="#goToAgentsForm" prefHeight="45.0" prefWidth="200.0" text="Go to Agents" style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-cursor: hand;" />
    </children>
</AnchorPane>


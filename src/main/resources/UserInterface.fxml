                <ImageView fitHeight="615.0" fitWidth="826.0">
                    <image>
                        <Image url="@css/Driver.jpg" />
                    </image>
                </ImageView>
                <VBox layoutX="10.0" layoutY="10.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="604.0" prefWidth="782.0" spacing="20" style="-fx-padding: 40 60;">

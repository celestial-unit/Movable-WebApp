<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.Rectangle?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controllers.UserCalendarViewController"
            stylesheets="@calendar-style.css">

    <top>
        <VBox spacing="10">
            <HBox alignment="CENTER" spacing="20" style="-fx-padding: 10;">
                <Button fx:id="prevMonthButton" text="&lt;" styleClass="nav-button" />
                <Label fx:id="monthYearLabel" styleClass="month-year-label"/>
                <Button fx:id="nextMonthButton" text="&gt;" styleClass="nav-button"/>
            </HBox>
            
            <HBox alignment="CENTER">
                <Label text="My Registered Events Calendar" styleClass="title-label">
                    <font>
                        <Font name="System Bold" size="16.0"/>
                    </font>
                </Label>
            </HBox>
            
            <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 0 10 0 0;">
                <Button fx:id="backToUserDashboardButton" onAction="#backToUserDashboard" text="Back to Dashboard" 
                    style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8px 15px;"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <GridPane fx:id="calendarGrid" styleClass="calendar-grid">
            <columnConstraints>
                <ColumnConstraints percentWidth="14.28"/>
                <ColumnConstraints percentWidth="14.28"/>
                <ColumnConstraints percentWidth="14.28"/>
                <ColumnConstraints percentWidth="14.28"/>
                <ColumnConstraints percentWidth="14.28"/>
                <ColumnConstraints percentWidth="14.28"/>
                <ColumnConstraints percentWidth="14.28"/>
            </columnConstraints>
        </GridPane>
    </center>
    
    <bottom>
        <VBox alignment="CENTER" spacing="5" style="-fx-padding: 10;">
            <Label text="Status Legend:" />
            <HBox alignment="CENTER" spacing="15">
                <HBox alignment="CENTER_LEFT" spacing="5">
                    <Rectangle width="15" height="15" fill="#4CAF50"/>
                    <Label text="Approved" />
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="5">
                    <Rectangle width="15" height="15" fill="#FFC107"/>
                    <Label text="Pending" />
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="5">
                    <Rectangle width="15" height="15" fill="#F44336"/>
                    <Label text="Rejected" />
                </HBox>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>


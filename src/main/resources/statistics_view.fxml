          AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20">
        
        <HBox alignment="CENTER">
            <Label text="Transport Statistics" 
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        </HBox>

        <!-- Statistics Grid -->
        <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;">
            <Label text="Basic Statistics" 
                  style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
            

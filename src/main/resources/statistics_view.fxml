                      style="-fx-font-weight: bold;"/>
                <Label fx:id="totalTransportsLabel" GridPane.columnIndex="1" GridPane.rowIndex="0"
                      style="-fx-font-size: 14px;"/>

                <Label text="Available Transports:" GridPane.columnIndex="0" GridPane.rowIndex="1"
                      style="-fx-font-weight: bold;"/>
                <Label fx:id="availableTransportsLabel" GridPane.columnIndex="1" GridPane.rowIndex="1"
                      style="-fx-font-size: 14px;"/>

                <Label text="Total Capacity:" GridPane.columnIndex="0" GridPane.rowIndex="2"
                      style="-fx-font-weight: bold;"/>
                <Label fx:id="totalCapacityLabel" GridPane.columnIndex="1" GridPane.rowIndex="2"
                      style="-fx-font-size: 14px;"/>

                <Label text="Average Capacity:" GridPane.columnIndex="0" GridPane.rowIndex="3"
                      style="-fx-font-weight: bold;"/>
                <Label fx:id="averageCapacityLabel" GridPane.columnIndex="1" GridPane.rowIndex="3"
                      style="-fx-font-size: 14px;"/>
            </GridPane>
        </VBox>


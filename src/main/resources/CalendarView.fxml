<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.FontWeight?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.Priority?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.CalendarController1" spacing="10" style="-fx-padding: 10;">
    <!-- Title -->
    <Label text="Upcoming Events" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <!-- Event List -->
    <ListView fx:id="eventListView" VBox.vgrow="ALWAYS">
        <placeholder>
            <Label text="No upcoming events found." />
        </placeholder>
    </ListView>

    <!-- Refresh Button -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Refresh" onAction="#loadEvents" style="-fx-font-weight: bold;" />
    </HBox>
</VBox>
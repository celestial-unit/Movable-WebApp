<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Text?>

<HBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Controllers.MapViewController"
      spacing="10"
      style="-fx-padding: 10;">

    <!-- Left Panel: City List -->
    <ListView fx:id="cityList" prefWidth="300"/>

    <!-- Center Panel: Map -->
    <StackPane fx:id="mapContainer" prefWidth="900" prefHeight="600">
        <ImageView fx:id="mapImage"/>
        <Text fx:id="loadingText" style="-fx-font-size: 20; -fx-fill: red;"/>
    </StackPane>

    <!-- Right Panel: Event Details -->
    <ListView fx:id="eventDetailsList" prefWidth="300"/>
</HBox>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/21.0.3" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.UserEventRegistrationController">

    <!-- Background Image -->
    <ImageView>

    </ImageView>

    <!-- Main Content Container -->
    <VBox spacing="30" style="-fx-padding: 40 60;">
        <!-- Header -->
        <HBox alignment="CENTER" style="-fx-padding: 20;">
            <Label style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Event Registration" />
        </HBox>

        <!-- Content Area -->
        <HBox spacing="40" VBox.vgrow="ALWAYS">
            <!-- Left Panel - Event List -->
            <VBox maxWidth="500" minWidth="400" spacing="15" style="-fx-background-color: rgba(255, 255, 255, 0.9); -fx-background-radius: 15; -fx-padding: 30;">
                <effect>
                    <DropShadow color="#00000033" radius="10" spread="0.1" />
                </effect>

                <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Available Events" />

                <HBox alignment="CENTER_LEFT" spacing="10">
                    <TextField fx:id="searchField" promptText="Search events..." style="-fx-background-radius: 20; -fx-padding: 10;" HBox.hgrow="ALWAYS" />
                    <Button style="-fx-background-radius: 20; -fx-padding: 10;" text="ðŸ”" />
                </HBox>

                <ListView fx:id="eventListView" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-font-size: 14px;" VBox.vgrow="ALWAYS" />
            </VBox>

            <!-- Right Panel - Registration Form -->
            <VBox spacing="20" style="-fx-background-color: rgba(255, 255, 255, 0.9); -fx-background-radius: 15; -fx-padding: 30;" HBox.hgrow="ALWAYS">
                <effect>
                    <DropShadow color="#00000033" radius="10" spread="0.1" />
                </effect>

                <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Register for Event" />

                <!-- Registration Form -->
                <GridPane hgap="20" style="-fx-padding: 20;" vgap="20">
                    <columnConstraints>
                        <ColumnConstraints minWidth="150" prefWidth="200" />
                        <ColumnConstraints hgrow="ALWAYS" minWidth="200" prefWidth="300" />
                    </columnConstraints>

                    <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Event:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <ComboBox fx:id="eventComboBox" promptText="Select Event" style="-fx-background-radius: 5; -fx-padding: 5; -fx-font-size: 14px;" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Event ID:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField fx:id="eventIdField" promptText="Enter Event ID" style="-fx-background-radius: 5; -fx-padding: 10; -fx-font-size: 14px;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Registration Date:" GridPane.rowIndex="2" />
                    <TextField fx:id="registrationDateField" editable="false" style="-fx-background-radius: 5; -fx-padding: 10; -fx-font-size: 14px;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                    <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Status:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                    <TextField fx:id="statusField" editable="false" style="-fx-background-radius: 5; -fx-padding: 10; -fx-font-size: 14px; -fx-background-color: #f0f0f0;" text="Pending" GridPane.columnIndex="1" GridPane.rowIndex="3" />

               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>
                </GridPane>

                <!-- Action Buttons -->
                <HBox alignment="CENTER_RIGHT" spacing="15" style="-fx-padding: 20 0 0 0;">
                    <Button fx:id="registerButton" onAction="#handleRegister" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 12 25; -fx-font-size: 14px;" text="Register" />
                    <Button fx:id="clearButton" onAction="#handleClear" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 12 25; -fx-font-size: 14px;" text="Clear" />
                    <Button fx:id="backButton" onAction="#handleBack" style="-fx-background-color: #8CBD7A; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12 25; -fx-font-size: 14px;" text="Back to Events" />
                </HBox>

                <!-- Help Text -->
                <VBox spacing="10" style="-fx-padding: 30 0 0 0;">
                    <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="How to Register" />
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #34495e;" text="1. Select an event from the dropdown or enter an event ID" wrapText="true" />
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #34495e;" text="2. Click 'Register' to submit your registration" wrapText="true" />
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #34495e;" text="3. Your registration status will be 'Pending' until approved by an administrator" wrapText="true" />
                </VBox>
                
                <!-- Your Registered Events Section -->
                <VBox spacing="10" style="-fx-padding: 20 0 0 0;">
                    <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Your Registered Events" />
                    <ListView fx:id="registeredEventsListView" prefHeight="150" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-font-size: 14px;" VBox.vgrow="ALWAYS" />
                </VBox>
            </VBox>
        </HBox>
    </VBox>
</StackPane>
